<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inicio_activity_con_menu_lateral"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.NoticiasFiltradasActivity">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_fondo_preriodico">

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ico_baseline_menu"

            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/m3_til_tema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:hint="Tema"
            app:boxBackgroundColor="@android:color/white"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconContentDescription="Ingreso del tema"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/m3_tiet_tema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/m3_til_orden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Orden"
            app:boxBackgroundColor="@android:color/white"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/m3_til_tema"
            app:startIconContentDescription="Ingreso del ordenamiento"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/m3_tiet_orden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/m3_til_limite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Limite"
            app:boxBackgroundColor="@android:color/white"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/m3_til_orden"
            app:startIconContentDescription="Ingreso del Limite"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/m3_tiet_limite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btn_consultar"
            style="@style/button_style1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Consultar"
            app:icon="@drawable/ico_baseline_list_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/m3_til_limite"


            />


        <TextView
            android:id="@+id/edt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="336dp"
            android:layout_marginTop="4dp"
            android:text=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/menu_principal_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        android:background="@color/celeste_bonito1"
        app:itemTextColor="@color/black"
        app:menu="@menu/navigation_menu_bar" />

</androidx.drawerlayout.widget.DrawerLayout>